<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <VideoView
        android:id="@+id/ZoomOutVideo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="start"
        app:srcCompat="@raw/zoom_out" />

    <TextView
        android:id="@+id/zoom_out_mode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/ZoomOutVideo"
        android:background="#000"
        android:gravity="center"
        android:paddingStart="0dp"
        android:paddingEnd="200dp"
        android:text="Mode: Zoom Out"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/zoom_out_timer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#000"
        android:gravity="center"
        android:layout_toEndOf="@id/ZoomOutVideo"
        android:layout_below="@id/zoom_out_mode"
        android:paddingStart="0dp"
        android:paddingEnd="200dp"
        android:text="Remain: 180s"
        android:textColor="#000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <VideoView
        android:id="@+id/ZoomOutCollection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/zoom_out_timer"
        android:gravity="start"
        />



</RelativeLayout>